@page
@model IndexModel
@{
    ViewData["Title"] = "Workout Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Build Your Workout</title>
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form {
            max-width: 500px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .exercise {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form id="workout-form" action="/submit-workout" method="post">
            <h1>Build Your Workout</h1>
            <div>
                <label for="title">Workout Title:</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div id="exercises-container">
                <div class="exercise">
                    <label for="exercises">Select Exercise:</label>
                    <select class="exercise-select" name="exercises[]" multiple required>
                        <option value="1">Push-ups</option>
                        <option value="2">Squats</option>
                        <option value="3">Pull-ups</option>
                    </select>
                    <div>
                        <label for="sets">Sets:</label>
                        <input type="number" class="sets" name="sets" min="1" value="3" required>
                    </div>
                    <div>
                        <label for="reps">Reps:</label>
                        <input type="number" class="reps" name="reps" min="1" value="10" required>
                    </div>
                </div>
            </div>
            <button type="button" id="add-exercise">Add Exercise</button>
            <button type="submit">Save Workout</button>
        </form>
    </div>

    <script>
        document.getElementById('add-exercise').addEventListener('click', function() {
            const exercisesContainer = document.getElementById('exercises-container');
            const newExercise = document.createElement('div');
            newExercise.classList.add('exercise');
            newExercise.innerHTML = `
                <label for="exercises">Select Exercise:</label>
                <select class="exercise-select" name="exercises[]" multiple required>
                    <option value="1">Push-ups</option>
                    <option value="2">Squats</option>
                    <option value="3">Pull-ups</option>
                    <!-- Add more exercise options as needed -->
                </select>
                <div>
                    <label for="sets">Sets:</label>
                    <input type="number" class="sets" name="sets" min="1" value="3" required>
                </div>
                <div>
                    <label for="reps">Reps:</label>
                    <input type="number" class="reps" name="reps" min="1" value="10" required>
                </div>
            `;
            exercisesContainer.appendChild(newExercise);
        });
    </script>
</body>
</html>
